---
import Layout from '../layouts/Layout.astro';
import Avatar from '../components/Avatar.astro'
import Socials from '@/components/Socials.astro';
---

<Layout title="cairocampos.dev">
	<section class="bg-zinc-100 py-16">
		<div class="container mx-auto h-screen flex flex-col items-center justify-center">
			<div class="flex items-center justify-center flex-col">
				<Avatar />
				<h2 class="text-3xl md:text-8xl leading-tight my-4">Cairo Campos</h2>
				<h3 class="title relative flex items-center gap-4 text-2xl md:text-5xl font-light">Web Developer</h3>
				<Socials />
			</div>
		</div>
	</section>
</Layout>


<style>
	.title::after,
	.title::before {
		content: "";
		height: 4px;
		width: 64px;
		background: #000;
		display: inline-block;
	}
</style>